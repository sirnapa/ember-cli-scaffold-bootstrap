<h1 class="page-header">
  {{#link-to "<%= dasherizedModuleNamePlural %>.new" tagName="a" class="pull-right" }}
    <i class="fa fa-plus-circle fa-fw"></i>
    {{t "button.new"}}
  {{/link-to}}
  {{t "<%= dasherizedModuleName %>.index.title"}}
</h1>

{{#if model.length}}
  <div class="table-responsive">
    <table class="table table-bordered table-striped">
      <thead>
        <tr><% attrs.forEach(function(attr) { %>
          <th>
            {{t "<%= dasherizedModuleName %>.<%= attr.name %>"}}
          </th><% }); %>
          <th colspan="3" class="text-center">
            <i class="fa fa-bars fa-fw"></i>
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |<%= camelizedModuleName %>|}}
          <tr><% attrs.forEach(function(attr) { %>
            <td>
              {{<%= camelizedModuleName %>.<%= attr.name %>}}
            </td><% }); %>
            <td class="text-center">
              {{#link-to "<%= dasherizedModuleNamePlural %>.show" <%= camelizedModuleName %>}}
                <i class="fa fa-eye fa-fw"></i>
              {{/link-to}}
            </td>
            <td class="text-center">
              {{#link-to "<%= dasherizedModuleNamePlural %>.edit" <%= camelizedModuleName %>}}
                <i class="fa fa-pencil fa-fw"></i>
              {{/link-to}}
            </td>
            <td class="text-center">
              <a href="#" {{action "remove" <%= camelizedModuleName %>}}>
                <i class="fa fa-times fa-fw"></i>
              </a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{else}}
  <p id="blankslate">
    {{t "<%= dasherizedModuleName %>.empty"}}
  </p>
{{/if}}
