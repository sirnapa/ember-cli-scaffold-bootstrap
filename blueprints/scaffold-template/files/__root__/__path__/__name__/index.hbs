<h1 class="page-header"><%= humanizedModuleNamePlural %> list</h1>

{{link-to "New <%= humanizedModuleName %>" "<%= dasherizedModuleNamePlural %>.new" tagName="button" class="btn btn-primary" }}

{{#if model.length}}
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr><% attrs.forEach(function(attr) { %>
          <th>
            <%= attr.label %>
          </th><% }); %>
          <th colspan="3">
            Actions
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |<%= camelizedModuleName %>|}}
          <tr><% attrs.forEach(function(attr) { %>
            <td>
              {{<%= camelizedModuleName %>.<%= attr.name %>}}
            </td><% }); %>
            <td>
              {{link-to "Edit" "<%= dasherizedModuleNamePlural %>.edit" <%= camelizedModuleName %>}}
            </td>
            <td>
              {{link-to "Show" "<%= dasherizedModuleNamePlural %>.show" <%= camelizedModuleName %>}}
            </td>
            <td>
              <a href="#" {{action "remove" <%= camelizedModuleName %>}}>Remove</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{else}}
  <p id="blankslate">
    No <%= humanizedModuleNamePlural %> found
  </p>
{{/if}}
